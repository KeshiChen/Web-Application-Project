extends layout
block content
    |         
    section.uv-subpage-heading.image-bg(style="background-image: url(/assets/images/sub-banner.jpg);")
      .overlay
        .container
          .row
            .uv-subhead-content.col-xs-12
              h2 My Profile 
              |                             
              span Welcome to DataDemy
    |         
    .uv-pagination
      .container
        ul
          li.active
            a(href="") Home
          |                     
          li
            a(href="") Profile
