
extends layout
block content
    .uv-pagination
      .container
        ul
          li.active
            a(href="") Home
          |                     
          li
            a(href="") Add article
    |         
    |  
    //
      |========================
      |      Edit Post form
      |========================         
    section.uv-profile
      .container
        .row.section-separator
          .col-sm-8
            .uv-sudent-profile-info
              .uv-student-courses-overview
                h3 Edit Post
                |                                 
                | 
                br                                
                .uv-profile-setting-inner
                  form.uv-profile-setting-form(method="post", action="/articles/update/" + article._id)
                    .row 
                      .form-group.col-sm-8
                        input.form-control(type="text", name="title", placeholder="Topic Title" ,value=article.title)
                      br
                      br  
                      br  

                                                                                                                                                                   
                      .form-group.col-xs-12
                        textarea.form-control(name="body", id="", placeholder="Content", cols="30", rows="6")=article.body
                      | 
                      hr
                      |                                             
                      .clearfix
                      |                                             
                      br          
                      .clearfix
                      | 
                      .col-xs-8                                                                                                 
                      .col-xs-4
                        br
                        input.btn.btn-fill(type="submit", value="Edit Post ")
          |                     
          .col-sm-4.uv-sidebar
            if user 
             .uv-widget
              .uv-student-avatar
                 figure
                    img(src="/assets/images/student-1.png", alt="")
                 |                            
                 .uv-student-info
                  h5 #{user.username}
                 |                             
                 .uv-student-infor-inner
                  
                  .div
                   h9 Email  :  #{user.email} 
                  .div                             
                   h9 Reword Point : #{user.rewardpoints}
                  |
                  br
                  a(href="#") My Post &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                  a(href="http://localhost:5000/articles/new") Add Posts 
                  br
                  a(href="/datasets_firstpage/checkdataset/mydataset") My Datasets  &nbsp;&nbsp;&nbsp;
                  a(href="#") Upload Datasets              
