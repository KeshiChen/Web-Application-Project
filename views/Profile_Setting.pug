extends layout
block content
    section.uv-subpage-heading.image-bg(style="background-image: url(/assets/images/sub-banner.jpg);")
      .overlay
        .container
          .row
            .uv-subhead-content.col-xs-12
              h2 My Profile                             
              span Welcome to Datademy      
    .uv-pagination
      .container
        ul
          li.active
            a(href="/") Home
          |                     
          li
            a(href="/profile/"+user.username) Profile
            //
              |========================
              |     Profile sidebar
              |========================  
        
    section.uv-profile
      .container
        .row.section-separator
          .col-sm-4.uv-sidebar.uv-student-profile-sidebar
            .uv-widget
              .uv-student-avatar
                figure
                  img(src=user.portrait, alt="")
              |                             
              .uv-student-info
                h5 #{user.username}
                |  
                        
            .uv-widget.no-side-padding
              .uv-student-nav
                ul
                  li.active
                    a(href='/profile/'+user.username)
                      i.fa.fa-user-circle-o.gt-color
                      | My Profile                                   
                  li
                    a(href='/profile_posts/'+user.username)
                      i.fa.fa-bookmark
                      | My Posts                                   
                  li
                    a(href='/profile_datasets/'+user.username)
                      i.fa.fa-calendar
                      | My datasets                                
                  li
                    a(href="/leaderboard")
                      i.fa.fa-industry
                      | LeaderBoard                         
                  li
                    a(href='/profile_setting/'+user.username)
                      i.fa.fa-gears
                      | Profile Setting
                                 
                  li
                    a(href="/logout")
                      i.fa.fa-sign-out
                      | Logout

          
          //
            |========================
            |      Profile setting form
            |========================  
          .col-sm-8
            .uv-sudent-profile-info
              .uv-student-courses-overview
                h3 Profile Setting

                .uv-profile-setting-inner
                  form.uv-profile-setting-form(action="/updateuser/"+user._id method="post")
                    .row
                      .form-group.col-sm-6
                        label User Name
                        input.form-control(type="text", name="username", placeholder=''+user.username, value=user.username)
                      .form-group.col-sm-6
                        label Email Address
                        input.form-control(type="email", name="email", required, placeholder=''+user.email, value=''+user.email)                           
                      .form-group.col-sm-6
                        label Password
                        input.form-control(type="password", name="password", required)
                      .form-group.col-sm-6
                        label Confirm Password
                        input.form-control(type="password", name="passwordConf", required)                    
                      .form-group.col-sm-6
                        label Phone Number
                        input.form-control(type="text", name="phone", value=''+user.phone, placeholder=''+user.phone)
                      .form-group.col-sm-6
                        label City
                        input.form-control(type="text", name="city", value=''+user.city, placeholder=''+user.city)
                      .form-group.col-sm-6
                        label Country
                        input.form-control(type="text", name="country", value=''+user.country, placeholder=''+user.country)
                                          
                      .form-group.col-xs-12
                        label Description
                        textarea.form-control(name="description" placeholder=user.description value=user.description)                                          
                      hr                                           
                      .clearfix                                                            
                      .col-xs-12
                        input.btn.btn-fill(type="submit", value="Update Profile")
