  section.uv-single-blog
    .container
        .row.section-separator
          .col-sm-9
            .card.mb-3
              .card-body
                h5.card-title #{datasetdetail.title}
                |
                p.card-text
                table.table.table-condensed
                  thead
                    tr
                      th Dataset
                      |
                      th Detail

                  |
                  tbody
                    tr
                      td Author
                      |
                      td #{datasetdetail.author.username}
                    |
                    tr
                      td Description
                      |
                      td #{datasetdetail.Description}
                    |
                    tr
                      td Datatype
                      |
                      td #{datasetdetail.datatype}
                    |
                    tr
                      td DatasetSize
                      |
                      td #{datasetdetail.datasetSize}
                |
                if user
                  form(action="/download", method="Post")
                    button.btn.btn-link(type="submit") Download
                    |
                    input#prodId(name="datasetpath", type="hidden", value = datasetdetail.datasetPath)
                else
                  a.btn.btn-link(href="http://localhost:5000/login") Download&nbsp;(Please Login)
                form(method='get', action='/articles/Post_Datasets')
                  input(id='datasetid', hidden, name='datasetid',  value=datasetid)
                  input.a.btn.btn-link(type="submit", value="Discussion")
                //- form(method='get', action='/datasetcomment')
                //-   input(id='datasetid', hidden, name='datasetid',  value=datasetid)
                //-   input.a.btn.btn-link(type="submit", value="Help")

                if user && user.username == datasetdetail.author.username
                  a.btn.delete-dataset(href="#", dataset-id=datasetid) Delete
            br
            br
            // DataTables Example
            .card.mb-3
              .card-header
                     h6   DataSet Detail
              |
              .card-body
                .table-responsive
